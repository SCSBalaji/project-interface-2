# Application
APP_NAME=Plant Disease Detection API
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=plant_disease_db

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# OTP Settings
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# CORS
FRONTEND_URL=http://localhost:5173

# Model Settings
MODEL_PATH=models/mobileplant_vit_full_checkpoint.pth
METADATA_PATH=models/deployment_metadata.json
UPLOAD_DIR=uploads

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png

# SMS/OTP Provider (Optional - for production)
# SMS_API_KEY=your-sms-api-key
# SMS_API_URL=https://api.sms-provider.com/send
